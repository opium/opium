<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="opium.serializer.file" class="Opium\OpiumBundle\Serializer\SplFileInfoSerializer">
            <argument>%photos_directory%</argument>
            <argument type="service" id="router"></argument>
            <argument type="service" id="request_stack"></argument>
            <argument>%allowed_mime_types%</argument>
            <tag name="jms_serializer.handler" type="Symfony\Component\Finder\SplFileInfo" direction="serialization" format="json" />
        </service>
    </services>
</container>
