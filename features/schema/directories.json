{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "geometry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        }
      }
    },
    "link": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "href": {
                "type": "string"
            }
        }
    },
    "file": {
        "type": "object",
        "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "pathname": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/file"
          }
        },
        "dtype": {
          "type": "string"
        },
        "_links": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "self": {
                "$ref": "#/definitions/link"
            }
          }
        },
        "_embedded": {
          "directory_thumbnail": {
            "type": "string"
          }
        },
        "image_lines": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
              "^\\d+$": {
                "type": "object",
                "properties": {
                  "geometry": {
                    "$ref": "#/definitions/geometry"
                  },
                  "thumbs": {
                    "type": "string"
                  }
                },
                "required": [
                  "geometry"
                ]
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "$ref": "#/definitions/file"
}
